# ==================== CPU OPTIMIZATION SETTINGS ====================

# Máximo de threads do PyTorch (recomendado: 2-4 para VPS pequenas, 6-8 para VPS maiores)
MAX_CPU_THREADS=4

# Porcentagem máxima do CPU a ser utilizada (0.0 a 1.0)
# 0.7 = 70% do CPU máximo. Recomendado: 0.5-0.7 para evitar sobrecarga
CPU_USAGE_LIMIT=0.7

# ==================== CONCURRENCY CONTROL ====================

# Máximo de processos TTS simultâneos
# Recomendado: 1-2 para VPS pequenas, 2-3 para VPS maiores
MAX_CONCURRENT_TTS=2

# Máximo de processos de vídeo simultâneos
# Recomendado: 1 (processamento de vídeo é muito pesado)
MAX_CONCURRENT_VIDEO=1

# Máximo de tarefas pesadas totais simultâneas
# Recomendado: 2-3 para VPS pequenas, 3-5 para VPS maiores
MAX_CONCURRENT_HEAVY_TASKS=3

# ==================== CONFIGURAÇÕES RECOMENDADAS POR TIPO DE VPS ====================

# VPS PEQUENA (1-2 CPU cores, 2-4GB RAM):
# MAX_CPU_THREADS=2
# CPU_USAGE_LIMIT=0.5
# MAX_CONCURRENT_TTS=1
# MAX_CONCURRENT_VIDEO=1
# MAX_CONCURRENT_HEAVY_TASKS=2

# VPS MÉDIA (2-4 CPU cores, 4-8GB RAM):
# MAX_CPU_THREADS=4
# CPU_USAGE_LIMIT=0.7
# MAX_CONCURRENT_TTS=2
# MAX_CONCURRENT_VIDEO=1
# MAX_CONCURRENT_HEAVY_TASKS=3

# VPS GRANDE (4+ CPU cores, 8+ GB RAM):
# MAX_CPU_THREADS=6
# CPU_USAGE_LIMIT=0.8
# MAX_CONCURRENT_TTS=3
# MAX_CONCURRENT_VIDEO=1
# MAX_CONCURRENT_HEAVY_TASKS=4 